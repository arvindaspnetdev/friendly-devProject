<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EMRFacade</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="\assets\img\logo-fav.png">
    @Styles.Render("~/Content/perfectscrollbar")
    @Styles.Render("~/Content/iconicfont")
    @Styles.Render("~/Content/appcss")
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="be-wrapper be-fixed-sidebar">
        @Html.Partial("~/Views/Shared/_TopNavigation.cshtml")
        @Html.Partial("~/Views/Shared/_Navigation.cshtml")
        <div class="be-content">
            @RenderBody()
        </div>
        @Html.Partial("~/Views/Shared/_RightNavigation.cshtml")
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/perfect-scrollbar")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/appjs")
    @RenderSection("scripts", required: false)
</body>
</html>
