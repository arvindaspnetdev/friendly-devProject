@model IEnumerable<EMRFacade.Areas.app.Models.PatientViewModel>
@{
    ViewBag.Title = "List";
}
<div class="page-head">
    <h2 class="page-head-title">Patients</h2>
    <nav aria-label="breadcrumb" role="navigation">
        <ol class="breadcrumb page-head-nav">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Patient</a></li>
            <li class="breadcrumb-item active">List</li>
        </ol>
    </nav>
</div>
<div class="main-content container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card card-table">
                <div class="card-header">
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm" name="SearchText" id="SearchText" placeholder="Patient Search...">
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-primary">Go!</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 text-right">
                            <button class="btn btn-default">More Filters</button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table id="tblpatient" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Patient Name</th>
                                <th>DOB</th>
                                <th>Medical Record Name</th>
                                <th>Gender</th>
                                <th>Phone</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FullName</td>
                            <td>@item.DOB</td>
                            <td>@item.MedicalRecordNumber</td>
                            <td>@item.Gender</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                        </tr>
        }
    }
    else
    {
            <tr>
                <td colspan="6" class="text-center">No Data Found!</td>
            </tr>
}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section styles{
    <link rel="stylesheet" type="text/css" href="\assets\lib\datatables\datatables.net-bs4\css\dataTables.bootstrap4.css">
}
@section scripts{
    <script src="\assets\lib\datatables\datatables.net\js\jquery.dataTables.js" type="text/javascript"></script>
    <script src="\assets\lib\datatables\datatables.net-bs4\js\dataTables.bootstrap4.js" type="text/javascript"></script>
    <script type="text/javascript">
    </script>
    <script src="/assets/js/app/patientlist.js"></script>
}